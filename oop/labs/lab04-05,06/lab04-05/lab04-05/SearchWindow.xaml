<Window x:Class="lab04_05.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search" Height="150" Width="300" Cursor="D:\уник\ооп ч2\лабораторные\lab04-05\lab04-05\lab04-05\arrow3.cur">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="InputTextBlock" Text="{DynamicResource InputTextBlock}" Margin="0 0 0 5"/>
        <TextBox Grid.Row="1" Name="ProductNameTextBox" Margin="0 5"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 5">
            <Button Content="OK" Click="OK_Click" Margin="5"/>
            <Button x:Name="CancelButton1" Content="{DynamicResource CancelButton1}" Click="Cancel_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>