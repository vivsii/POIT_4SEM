<Window x:Class="lab08.Product"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab08"
        mc:Ignorable="d"
            Title="Товар" Height="490" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#ffcdcb">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="ID продукта:" HorizontalAlignment="Center"/>
            <TextBox x:Name="IDProduct" Margin="25,0,25,25"/>
            <TextBlock Text="Название:" HorizontalAlignment="Center"/>
            <TextBox x:Name="Name" Margin="25,0,25,25"/>
            <TextBlock Text="Описание:" HorizontalAlignment="Center"/>
            <TextBox x:Name="Description" Margin="25,0,25,25"/>
            <TextBlock Text="Цена:" HorizontalAlignment="Center"/>
            <TextBox x:Name="Price" Margin="25,0,25,25"/>
            <TextBlock Text="Категория:" HorizontalAlignment="Center"/>
            <TextBox x:Name="Category"  Width="150" Margin="25,0,25,25"/>
            <Button Click="Photo_Click" Content="Загрузить фото" Margin="25,0,25,10" Height="20"/>
            <Image x:Name="imgDynamic" Height="90" Width="90"/>
            <Button Click="Save_Click" Content="Сохранить" Margin="25,10,25,25" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
