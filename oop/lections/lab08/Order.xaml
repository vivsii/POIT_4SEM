<Window x:Class="lab08.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab08"
        mc:Ignorable="d"
            Title="Заказ" Height="490" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#ffcdcb">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="ID заказа:" HorizontalAlignment="Center"/>
            <TextBox x:Name="OrderID" Margin="25,0,25,25"/>
            <TextBlock Text="ID клиента:" HorizontalAlignment="Center"/>
            <TextBox x:Name="Client_ID" Margin="25,0,25,25"/>
            <TextBlock Text="Дата заказа:" HorizontalAlignment="Center"/>
            <Calendar x:Name="DateOrder" Width="176"/>
            <TextBlock Text="Статус заказа:" HorizontalAlignment="Center"/>
            <TextBox x:Name="Status" Margin="25,0,25,25"/>
            <Button Content="Добавить товар" Margin="25,10,25,25" Click="Add_Click" Height="20"/>
            <Button Click="Save_Click" Content="Сохранить" Margin="25,10,25,25" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
