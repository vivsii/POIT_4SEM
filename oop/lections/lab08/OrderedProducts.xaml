<Window x:Class="lab08.OrderedProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab08"
        mc:Ignorable="d"
            Title="Заказанные товары" Height="240" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#ffcdcb">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="ID заказа:" HorizontalAlignment="Center"/>
            <TextBox x:Name="OrderID" Margin="25,0,25,25"/>
            <TextBlock Text="ID товара:" HorizontalAlignment="Center"/>
            <TextBox x:Name="ProductID" Margin="25,0,25,25"/>
            <TextBlock Text="Количество:" HorizontalAlignment="Center"/>
            <TextBox x:Name="Quantity" Width="176" Margin="25,0,25,25"/>
            <Button Click="Save_Click" Content="Сохранить" Margin="25,10,25,25" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
